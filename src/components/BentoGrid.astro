---
import BentoItem from "./BentoItem.astro";
import Avatar from "./icons/avatar.astro";


---
<section 
    class={`
        grid grid-cols-10 gap-3 
        auto-rows-max p-6 min-w-[370px] max-w-full
    `}>

    <BentoItem class="md:col-span-6" title="DESARROLLADOR Y PROGRAMADOR."></BentoItem>
    
    <BentoItem class="md:col-span-4" title="INFORMACIÓN BÁSICA">
      <div class="grid lg:grid-cols-2" slot="content">
          <div class="lg:order-2 flex flex-col justify-center items-center">
              <Avatar /> 
          </div>
          <div class="lg:order-1 text-center lg:text-left items-center w-full p-5">
              <p>Jhon Brandon Layton Rodriguez</p>
              <p>20 años</p>
              <p>Programador front end</p>
              <p>Tecnologia en desarrollo de software</p>
              <p>Bogotá, Colombia</p>
          </div>
      </div>
  </BentoItem>

    <BentoItem class="md:col-span-5" title="PROYECTOS"></BentoItem>
    <BentoItem class="md:col-span-5" title="EXPERIENCIA"></BentoItem>
    <BentoItem class="md:col-span-7" title="TECNOLOGÍAS"></BentoItem>
    <BentoItem class="md:col-span-3" title="CERTIFICADOS"></BentoItem>

</section>

<style>
  p {
    font-family:
      "Outfit Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
      font-weight: 400;
      padding-bottom: 10px;
      font-size: 1.4rem;
  }

</style>
