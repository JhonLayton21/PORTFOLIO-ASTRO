---
import GmailLogo from "../icons/logos/gmail.svg";
import GithubLogo from "../icons/logos/github.svg";
import LinkedinLogo from "../icons/logos/linkedin.svg";
import WhatsappLogo from "../icons/logos/whatsapp.svg";

const { logo, text, link } = Astro.props;

const logoMap = {
  "gmail.svg": GmailLogo,
  "github.svg": GithubLogo,
  "linkedin.svg": LinkedinLogo,
  "whatsapp.svg": WhatsappLogo,
};

const resolvedLogo = logoMap[logo] || logo; 
---

<div class="flex items-center justify-center m-4">
    <a 
      href={link} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="flex items-center">
      <img src={resolvedLogo.src} alt="logo" class="inline-block mr-4 w-7 h-7" />
      <p class="text-xl">{text}</p>
    </a>
  </div>
  

<style>
  p {
    font-family:
      "Outfit Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>

