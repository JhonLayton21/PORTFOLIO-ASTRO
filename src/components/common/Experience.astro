---
const { title, subtitle, text, date, link } = Astro.props;
---

<div class="m-4 grid grid-cols-12 pb-5 relative">
  <div class="col-span-6">
    <h2 class="!text-xl !font-bold mb-2">{title}</h2>
    <a href={link} target="_blank" class="break-words">{link}</a>
    <p>{date}</p>
  </div>
  <div class="col-span-6">
    <h3 class="!text-xl !font-bold mb-2">{subtitle}</h3>
    <p>{text}</p>
  </div>
  <div
    class="absolute bottom-0 left-0 w-full rounded-full h-1 bg-gradient-to-r from-white via-indigo-500 to-indigo-700"
  >
  </div>
</div>

<style>
  h2,
  h3,
  p,
  a {
    font-family:
      "Outfit Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
