---
import "@fontsource-variable/outfit";
interface Props {
  class?: string;
  title: string;
}

const { title } = Astro.props;
---

<article
  class={`
    ${Astro.props.class} 
    col-span-10 relative rounded-xl
    hover:border-white-500 hover:border-2
    `}
>
  <h2 class="p-3">{title}</h2>
</article>

<style>
  article {
    /* From https://css.glass */
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(6.4px);
    -webkit-backdrop-filter: blur(6.4px);
    border: 1px solid rgba(255, 255, 255, 0.16);
  }
  h2 {
    font-family:
      "Outfit Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-weight: 500;
    font-size: 30px;
  }
</style>
