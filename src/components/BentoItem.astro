---
import "@fontsource-variable/outfit";

interface Props {
  class?: string;
  title: string;
}

const { title } = Astro.props;
---

<article
  class={`
    ${Astro.props.class} 
    col-span-10 rounded-xl
    `}
>
  <h2 class="p-3 text-center md:text-left text-transparent bg-clip-text bg-gradient-to-r from-slate-100 to-indigo-700">{title}</h2>
  <slot name="content"></slot>
</article>

<style>
  article {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(6.4px);
    -webkit-backdrop-filter: blur(6.4px);
    border: 1px solid rgba(255, 255, 255, 0.093);
  }
  h2 {
    font-family:
      "Outfit Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-weight: 700;
    font-size: 1.5rem;
  }
</style>
